@using BlazorAdmin.Servers.Core.Helper
<MudDialog>
	<DialogContent>
		<div style="width:300px;">
			<EditForm Model="PasswordModel" OnValidSubmit="Submit" style="width:100%;">
				<DataAnnotationsValidator />
				<MudTextField  @bind-Value="PasswordModel.Password" Variant="Variant.Outlined" Margin="Margin.Dense"
							  Placeholder="请输入新密码" For="@(() => PasswordModel.Password)" InputType="InputType.Password"></MudTextField>
				<div class="mt-4 d-flex">
					<MudSpacer />
					<MudButton Variant="Variant.Text" FullWidth="false" Color="Color.Primary" Size="Size.Medium"
							   ButtonType="ButtonType.Submit" StartIcon="@Icons.Material.Filled.Upload">@Loc["UserPage_SubmitText"]</MudButton>
				</div>
			</EditForm>
		</div>
	</DialogContent>
</MudDialog>