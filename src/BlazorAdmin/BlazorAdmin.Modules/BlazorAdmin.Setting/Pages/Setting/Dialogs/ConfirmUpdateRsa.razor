@using BlazorAdmin.Servers.Core.Helper
<MudDialog Gutters="false">
    <DialogContent>
        <div style="width:600px;" class="px-6 py-2">
            <div class="d-flex align-center">
                <MudIcon Icon="@Icons.Material.Filled.Warning" Size="Size.Large" Class="mr-2"></MudIcon>
                <MudText Typo="Typo.h6">@_loc["JwtComConfirmQuestion"]</MudText>
            </div>
            <div class="d-flex align-center mt-6">
                <MudSpacer />
                <MudButton Variant="Variant.Text" Color="Color.Error" Size="Size.Medium"
                           StartIcon="@Icons.Material.Filled.ConfirmationNumber" OnClick="Confirm">
                    @_loc["JwtComConfirmText"]
                </MudButton>
            </div>
        </div>
    </DialogContent>
</MudDialog>