@using BlazorAdmin.Layout.Components.Themes
@using BlazorAdmin.Servers.Core.Helper
@using BlazorAdmin.Servers.Core.States
@using BlazorAdmin.Web.Components.Shared
@inherits LayoutComponentBase

<ProvidersAggregate></ProvidersAggregate>

<PageTitle>BlazorAdmin</PageTitle>

<LoggerErrorBoundary>
    <ChildContent>
        <MudLayout>
            <AuthorizeView Context="authContext">
                <Authorized>
                    <AuthorizedLayout>
                        <Child>
                            @Body
                        </Child>
                    </AuthorizedLayout>
                </Authorized>
                <NotAuthorized>
                    @Body
                </NotAuthorized>
            </AuthorizeView>
        </MudLayout>
    </ChildContent>
    <ErrorContent>
        <div style="background: red">@context</div>
    </ErrorContent>
</LoggerErrorBoundary>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
